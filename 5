public class Animal
{
    
    private string name;
    public string Name
    {
        get { return name; }
        set { name = value; }
    }

    
    public Animal(string name)
    {
        this.name = name;
    }

   
    public void Speak()
    {
        Console.WriteLine($"{name} издаёт звук.");
    }
}

public class Cat : Animal
{
     
    private int lives;
    public int Lives
    {
        get { return lives; }
        set { lives = value; }
    }

   
    public Cat(string name, int lives) : base(name)
    {
        if (lives < 1 || lives > 9)
            throw new ArgumentException("Жизни должны быть от 1 до 9");
        this.lives = lives;
    }

     
    public Cat(string name) : this(name, 9)
    {
    }

   
    public void Meow()
    {
        if (lives > 1)
            lives--;

        Console.WriteLine($"{Name} мяукнул, осталось жизней: {lives}.");
    }
}
