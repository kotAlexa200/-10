public class Book
{
     
    private string title;
    private int pages;
    
    public string Title
    {
        get => title;
        set => title = value ?? "Не указано";
    }

    public int Pages
    {
        get => pages;
        set
        {
            if (value < 1 || value > 5000)
                throw new ArgumentOutOfRangeException("Количество страниц должно быть от 1 до 5000");
            pages = value;
        }
    }

    
    public Book(string title, int pages)
    {
        Title = title;
        Pages = pages;
    }

     
    public Book(string title) : this(title, 100)
    {
    }

    
    public Book() : this("Без названия", 1)
    {

    }

   
    public void Read()
    {
        Console.WriteLine($"Читаю книгу {Title}, страниц: {Pages}. ");
        
    }
}

 class Program
 {
     static void Main()
     {
     
         Book book1 = new Book("Война и мир", 1225);
         Book book2 = new Book("Гарри Поттер");
         Book book3 = new Book();
 
         book1.Read();
         book2.Read();
         book3.Read();

         
         try
         {
             Book invalidBook = new Book("Ошибка", 0);
         }
         catch (ArgumentOutOfRangeException ex)
         {
             Console.WriteLine($"Ошибка: {ex.Message}");
         }
     }
 }
